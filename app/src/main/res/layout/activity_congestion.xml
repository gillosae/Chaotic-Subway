<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Widget.AppCompat.PopupMenu.Overflow">
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도 "
            android:textAppearance="?android:textAppearanceSmallPopupMenu"/>
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layoutDirection="rtl"
            app:defaultQueryHint="역을 입력하세요" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/lineCircle"
            android:src="@drawable/line7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp">
            <TextView
                android:id="@+id/depStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상도"
                android:textSize="30sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_arrow_forward"/>
            <TextView
                android:id="@+id/curStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장승배기"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_arrow_forward"/>
            <TextView
                android:id="@+id/arrStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대림"
                android:textSize="30sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tilArrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="6분 후 대림역 도착"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부평구청행(6890)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="실시간 열차 혼잡도"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/cabin_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="2"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="3"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="4"
                    android:textSize="20dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cabin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="5"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="6"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="7"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="8"
                    android:textSize="20dp"
                    android:gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cabin_info"
                android:paddingVertical="20dp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>